# Telegram Bot Token from @BotFather
BOT_TOKEN=your_bot_token_here

# Command prefix to trigger anonymization
COMMAND_PREFIX=@anon

# Queue timeout in seconds (how long to wait for follow-up message)
QUEUE_TIMEOUT=60

# Whether to show error notifications in chat
ERROR_NOTIFICATIONS=true

# Optional: Redis URL for distributed queue (leave empty for in-memory)
REDIS_URL=